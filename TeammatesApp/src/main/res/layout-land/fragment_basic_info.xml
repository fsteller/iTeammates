<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/teammates_header_background"
    android:id="@+id/fragment_basic_info"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingTop="10dip"
    android:paddingStart="10dip"
    android:paddingLeft="10dip"
    android:paddingEnd="10dip"
    android:paddingRight="10dip">

    <TextView

        android:id="@id/collection_title_label"
        android:text="@string/name"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:inputType="textPersonName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@id/collection_title_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/collection_title_label"/>

    <TextView
        android:layout_marginTop="10dip"
        android:text="@string/description"
        android:gravity="center_vertical"
        android:id="@id/collection_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/collection_title_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@id/collection_description_text"
        android:layout_below="@id/collection_description_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>


