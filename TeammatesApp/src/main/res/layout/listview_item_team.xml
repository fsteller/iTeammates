<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/teammates_header_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:id="@id/card">


    <ImageView
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:id="@id/listView_item_image"
        android:contentDescription="@string/emptyString"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listView_item_image"
        android:layout_alignBottom="@id/listView_item_image"
        android:layout_alignTop="@id/listView_item_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center|start|left"
        android:padding="5dip">

        <TextView
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:gravity="center|start|left"
            android:id="@id/listView_item_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Creation"
            android:id="@id/listView_item_creation"
            android:layout_below="@id/listView_item_title"
            android:layout_alignLeft="@id/listView_item_title"
            android:layout_alignStart="@id/listView_item_title"/>

        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last Update"
            android:id="@id/listView_item_update"
            android:layout_below="@id/listView_item_creation"
            android:layout_alignLeft="@id/listView_item_title"
            android:layout_alignStart="@id/listView_item_title"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/listView_item_check"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>


</RelativeLayout>