<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/teammates_header_background"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:id="@id/contact_item"
              android:padding="10dp">

    <view
        android:layout_margin="5dp"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@id/contact_image"
        android:scaleType="centerCrop"
        class="com.fsteller.mobile.android.teammatesapp.utils.image.RoundedImageView"/>

    <RelativeLayout
        android:weightSum="1"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding">

        <TextView
            android:text="@string/emptyString"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="@string/emptyString"
            android:textSize="12sp"
            android:id="@id/contact_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_name"
            android:layout_toLeftOf="@id/contact_check"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <CheckBox
            android:text="@string/emptyString"
            android:id="@id/contact_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</LinearLayout>