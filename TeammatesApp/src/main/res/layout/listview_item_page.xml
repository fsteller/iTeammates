<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">


    <ImageView
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:id="@id/listView_item_image"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listView_item_image"
        android:layout_alignBottom="@id/listView_item_image"
        android:layout_alignTop="@id/listView_item_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="5dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:id="@id/listView_item_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@id/listView_item_description"
            android:layout_alignEnd="@id/listView_item_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Description"
            android:id="@id/listView_item_description"
            android:layout_below="@id/listView_item_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/listView_item_update" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Creation"
            android:id="@id/listView_item_creation"
            android:layout_above="@id/listView_item_update"
            android:layout_alignLeft="@id/listView_item_update"
            android:layout_alignStart="@id/listView_item_update"
            android:layout_alignRight="@id/listView_item_update"
            android:layout_alignEnd="@id/listView_item_update" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last Update"
            android:id="@id/listView_item_update"
            android:layout_alignTop="@id/listView_item_description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</RelativeLayout>