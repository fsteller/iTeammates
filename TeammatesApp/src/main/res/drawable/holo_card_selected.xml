<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:right="1dip"
        android:bottom="2dip">
        <shape
            android:shape="rectangle"
            android:dither="true">
            <solid android:color="@color/holo_white" />
            <corners android:radius="2dip" />
        </shape>
    </item>

    <item
        android:right="1dip"
        android:bottom="2dip">
        <shape
            android:shape="rectangle"
            android:dither="true">
            <solid android:color="@color/holo_blue_light" />
            <corners android:radius="2dip" />
            <padding
                android:bottom="5dip"
                android:left="5dip"
                android:right="3dip"
                android:top="3dip" />
        </shape>
    </item>

</layer-list>